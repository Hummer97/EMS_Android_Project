<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D2331"
    tools:context=".Receipts">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/rcpt_l"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_weight="1"
                android:ems="4"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:shadowColor="@color/intro_title_color"
                android:text="Invoice Details"
                android:textAlignment="center"
                android:fontFamily="@font/aladin"
                android:textColor="@color/gradient_end_color"
                android:textSize="25sp"
                android:textStyle="bold" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/rcpt_l1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_below="@id/rcpt_l"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rpt_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:ems="4"
                android:fontFamily="@font/aladin"
                android:padding="5dp"
                android:shadowColor="@color/intro_title_color"
                android:text="User Name"
                android:textColor="@color/gradient_start_color"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rpt_txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/courgette"
                android:padding="5dp"
                android:text="TextView"
                android:textColor="@color/content_text_color"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:gravity="center_horizontal" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/rcpt_l2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rcpt_l1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rpt_mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:ems="4"
                android:fontFamily="@font/aladin"
                android:padding="5dp"
                android:shadowColor="@color/intro_title_color"
                android:text="Mail ID"
                android:textColor="@color/gradient_start_color"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rpt_txt_mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/courgette"
                android:padding="5dp"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:text="TextView"
                android:textColor="@color/content_text_color"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/rcpt_l3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rcpt_l2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rpt_all_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:ems="4"
                android:padding="5dp"
                android:shadowColor="@color/intro_title_color"
                android:text="All Expenses Total"
                android:fontFamily="@font/aladin"
                android:textColor="@color/gradient_start_color"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rpt_txt_all_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/courgette"
                android:padding="5dp"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:text="TextView"
                android:textColor="@color/content_text_color"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/rcpt_l4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rcpt_l3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rpt_own_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:ems="4"
                android:padding="5dp"
                android:shadowColor="@color/intro_title_color"
                android:text="Own Expenses Total"
                android:textColor="@color/gradient_start_color"
                android:textSize="16sp"
                android:fontFamily="@font/aladin"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rpt_txt_own_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/courgette"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:text="TextView"
                android:textColor="@color/content_text_color"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/rcpt_l5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rcpt_l4"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rpt_grand_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:ems="4"
                android:padding="5dp"
                android:shadowColor="@color/intro_title_color"
                android:text="Grand Value"
                android:fontFamily="@font/aladin"
                android:textColor="@color/gradient_start_color"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rpt_txt_grand_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="@drawable/own_exp_card_bg"
                android:fontFamily="@font/courgette"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:text="TextView"
                android:textAlignment="center"
                android:textColor="@color/intro_title_color"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>