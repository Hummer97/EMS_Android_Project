<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:paddingLeft="12dp">

    <RelativeLayout
        android:id="@+id/own_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/own_exp_card_bg"
        android:paddingBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/ownExp_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="21dp"
            android:fontFamily="@font/aladin"
            android:text="Simple Text"
            android:textColor="#0069C0"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ownExp_description"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/ownExp_title"
            android:layout_alignStart="@id/ownExp_title"
            android:layout_alignLeft="@id/ownExp_title"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            android:layout_toStartOf="@+id/ownExp_date"
            android:layout_toLeftOf="@+id/ownExp_date"
            android:lineSpacingExtra="8dp"
            android:text="Lorem ipsum dolor sit amet consectetur adipisicing elit.  "
            android:textColor="#0D2331" />

        <TextView
            android:id="@+id/ownExp_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ownExp_date"
            android:layout_alignStart="@id/ownExp_date"
            android:layout_alignLeft="@id/ownExp_date"
            android:layout_centerInParent="true"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:layout_toRightOf="@+id/ownExp_description"
            android:fontFamily="@font/aladin"
            android:text="20"
            android:textColor="#0069C0"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ownExp_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/ownExp_title"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="21dp"
            android:fontFamily="@font/courgette"
            android:layout_marginRight="16dp"
            android:text="Date Text"
            android:textColor="#0D2331" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/ownExp_UserImg"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toStartOf="@+id/own_container"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="@+id/own_container"
        app:layout_constraintTop_toTopOf="@+id/own_container"
        app:srcCompat="@drawable/avatar" />
</androidx.constraintlayout.widget.ConstraintLayout>