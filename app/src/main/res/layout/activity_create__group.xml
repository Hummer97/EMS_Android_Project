<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/newbg"
    tools:context="com.roy.Expenses_Management_System.Activities.Create_Group">

    <RelativeLayout
        android:id="@+id/rl_container"
        android:layout_width="0dp"
        android:layout_height="424dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:background="@drawable/bg_transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.497" />

    <Button
        android:id="@+id/rg_group_create_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/btn_gradient_style"
        android:text="Create"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintEnd_toEndOf="@+id/rl_container"
        app:layout_constraintStart_toStartOf="@+id/rl_container"
        app:layout_constraintTop_toTopOf="@+id/guideline2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.59" />

    <EditText
        android:id="@+id/rg_group_size"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/txt_input_bg"
        android:hint="@string/GroupSize"
        android:inputType="textPersonName"
        android:padding="15dp"
        android:textColor="@color/txt_input_bgcolor"
        android:textColorHint="@color/tab_indicator_gray"
        app:layout_constraintBottom_toTopOf="@+id/rg_group_create_btn"
        app:layout_constraintEnd_toEndOf="@+id/rl_container"
        app:layout_constraintStart_toStartOf="@+id/rl_container" />


    <EditText
        android:id="@+id/rg_group_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/txt_input_bg"
        android:hint="Group Name"
        android:inputType="textPersonName"
        android:padding="15dp"
        android:textColor="@color/txt_input_bgcolor"
        android:textColorHint="@color/tab_indicator_gray"
        app:layout_constraintBottom_toTopOf="@+id/rg_group_size"
        app:layout_constraintEnd_toEndOf="@+id/rl_container"
        app:layout_constraintStart_toStartOf="@+id/rl_container"
        app:layout_constraintTop_toBottomOf="@+id/rg_img"
        app:layout_constraintVertical_bias="0.68" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:src="@drawable/avatar"
        android:id="@+id/rg_img"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:padding="2dp"
        app:civ_border_color="#FF000000"
        android:background="@drawable/circular_bg"
        app:layout_constraintBottom_toTopOf="@+id/rl_container"
        app:layout_constraintEnd_toEndOf="@+id/rl_container"
        app:layout_constraintStart_toStartOf="@+id/rl_container"
        app:layout_constraintTop_toTopOf="@+id/rl_container" />

    <ProgressBar
        android:id="@+id/rg_progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/rg_group_create_btn"
        app:layout_constraintEnd_toEndOf="@+id/rg_group_create_btn"
        app:layout_constraintStart_toStartOf="@+id/rg_group_create_btn"
        app:layout_constraintTop_toTopOf="@+id/rg_group_create_btn" />


</androidx.constraintlayout.widget.ConstraintLayout>